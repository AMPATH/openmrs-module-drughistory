<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.drughistory">

    <class name="DrugEvent"
           table="${project.parent.artifactId}_drug_event">
        <id name="drugEventId" type="int" column="drug_event_id" unsaved-value="0">
            <generator class="native"/>
        </id>
        <discriminator column="drug_event_id" insert="false"/>
        <property name="uuid" type="java.lang.String" column="uuid"
                  length="38" unique="true"/>
        <property name="dateOccurred" type="java.util.Date" column="date_occurred"/>
        <property name="type" type="org.openmrs.util.HibernateEnumType" column="type" not-null="true"/>

        <!-- Associations-->
        <one-to-one name="concept" class="org.openmrs.Concept" foreign-key="concept_id"/>
        <one-to-one name="encounter" class="org.openmrs.Encounter" foreign-key="encounter_id"/>
        <one-to-one name="person" class="org.openmrs.Person" foreign-key="person_id"/>
    </class>

</hibernate-mapping>
